@page "/studentform"
@inject NavigationManager navigationManager
<style>
    .do {
        text-decoration: double;
        font-family: cursive;
        font-size: 30px;
    }

    .doi {
        text-decoration: dotted;
        font-family: 'Arial Rounded MT';
        font-size: 20px;
        padding-left: 40px;
    }

    .q {
        height: 100px;
        width: 150px;
        border-radius: 20px;
        border: 1px solid white;
    }
</style>
<form>
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger rounded" >
        <div class="container-fluid">
            <a class="navbar-brand do" href="#">cSplash</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 doi">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/studentform">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/course">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contactus">Contact Us</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <br />
    <div class="container">
        <center>
            <h1 class="heading"> Course Registeration Form</h1>
        </center>
        <hr>
        <label> Firstname </label>
        <input type="text" name="firstname" placeholder="Firstname" size="15" required @bind="f_name" />
        <label> Middlename: </label>
        <input type="text" name="middlename" @bind="m_name" placeholder="Middlename" size="15" required />
        <label> Lastname: </label>
        <input type="text" name="lastname" @bind="l_name" placeholder="Lastname" size="15" required />
        <div>
            <label>
                Course :
            </label>

            <select @bind="course">
                <option value="Course">Course</option>
                <option value="BCA">Web Development</option>
                <option value="BBA">Wordpress</option>
                <option value="B.Tech">Html 5</option>
                <option value="MBA">Bootstrap</option>
                <option value="MCA">Blazor App</option>
                <option value="M.Tech">Flutter</option>
            </select>
        </div>
        <div>
            <label>
                Select Gender :
            </label>

            <select @bind="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
               
            </select>
        </div>
       
        
        <label>
            Phone :
        </label>
        <input type="text" name="country code" placeholder="Country Code" @bind="country_code" size="2" />
        <input type="text" name="phone" @bind="phone" placeholder="phone no." size="10" / required>
        Current Address :
        <textarea cols="80" rows="5" placeholder="Current Address" @bind="address" required>
      </textarea>
        <label for="email"><b>Email</b></label>
        <input type="text" @bind="email" placeholder="Enter Email" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" @bind="pasword" placeholder="Enter Password" name="psw" required>

        <label for="psw-repeat"><b>Re-type Password</b></label>
        <input type="password" placeholder="Retype Password" name="psw-repeat" required>
        <button type="submit" @onclick="GoToNext" class="registerbtn">Register</button>
    </div>
</form>
<footer class="container">
    <p class="float-end"><a href="#"><img class="q" src="data:image/png;base64," alt="Alternate Text" /></a></p>
    <p>© 2024–2025 ARWORLD, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
</footer>

@code {
    public string f_name;
    public string m_name;
    public string l_name;
    public string course;
    public string gender;
    public string country_code;
    public string phone;
    public string address;
    public string email;
    public string pasword;
    private void GoToNext()
    {
        string url = $"/displayingdata/{f_name}/{m_name}/{l_name}/{course}/{country_code}/{phone}/{address}/{email}";
        navigationManager.NavigateTo(url);
    }



}
