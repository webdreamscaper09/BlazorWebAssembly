@page "/displayingdata"
@page "/displayingdata/{f_name}/{m_name}/{l_name}/{course}/{country_code}/{phone}/{address}/{email}"

<style>
    body {
        background-color: #f5f5f5; /* Light gray background */
        font-family: 'Open Sans', sans-serif; /* Use Open Sans font if available, fallback to sans-serif */
        background-image: url("https://media.istockphoto.com/id/182061790/photo/white-wooden-board-background.webp?b=1&s=170667a&w=0&k=20&c=fx_BzzYC0AXYDunC2nZ2MrjUi_77ZIT6issO3UD1d8o="); /* Set background image */
        background-size: cover; /* Cover the entire background area */
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent image repetition */
    }

    .data-block {
        background-color: #fff; /* White background for each block */
        border: 1px solid #ddd; /* Border for separation */
        border-radius: 5px; /* Rounded corners for a softer look */
        padding: 20px; /* Add some padding for better spacing */
        margin-bottom: 20px; /* Add some margin for separation */
        display: inline-block; /* Make blocks appear side-by-side on small screens */
        width: calc(50% - 20px); /* Adjust width for two blocks per row (considering margins) */
    }

    h2 {
        color: #333; /* Dark gray heading */
        font-family: 'Roboto', sans-serif; /* Use Roboto font if available, fallback to sans-serif */
    }

    p {
        color: #666; /* Light gray text */
        line-height: 1.5; /* Add some line spacing for readability */
    }
</style>
<nav class="navbar navbar-light bg-light">
    <form class="form-inline">
        <button class="btn btn-outline-success" type="button">Main button</button>
        <button class="btn btn-sm btn-outline-secondary" type="button">Smaller button</button>
    </form>
</nav>
<div class="container">
    <div class="row">
        <div class="data-block">
            <h2>Personal Information</h2>
            <p><strong>Firstname:</strong> @f_name</p>
            <p><strong>Middlename:</strong> @m_name</p>
            <p><strong>Lastname:</strong> @l_name</p>
            <p><strong>Course:</strong> @course</p>
            <p><strong>Gender:</strong> @gender</p>
        </div>
        <div class="data-block">
            <h2>Contact Information</h2>
            <p><strong>Phone:</strong> @country_code @phone</p>
            <p><strong>Address:</strong> @address</p>
            <p><strong>Email:</strong> @email</p>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVFQWjxhNVAaIbQzS8bA9JxLqtlSX8xU1CujtT9BwWvOqBsP++EA" crossorigin="anonymous"></script>

@code {
    [Parameter]
    public string f_name { get; set; }
    [Parameter]
    public string m_name { get; set; }
    [Parameter]
    public string l_name { get; set; }
    [Parameter]
    public string course { get; set; }
    [Parameter]
    public string gender { get; set; }
    [Parameter]
    public string country_code { get; set; }
    [Parameter]
    public string phone { get; set; }
    [Parameter]
    public string address { get; set; }
    [Parameter]
    public string email { get; set; }
}
